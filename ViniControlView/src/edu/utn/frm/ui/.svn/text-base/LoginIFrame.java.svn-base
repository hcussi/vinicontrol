    private void login() {
        if ( isLoginValid() ) {
            LoginControlador.getInstance().validarAcceso();
            ViniControlView viniControlView = new ViniControlView();
            Utiles.centrarFormulario(viniControlView);
            viniControlView.setExtendedState(JFrame.MAXIMIZED_BOTH);
            viniControlView.setVisible(true);
            this.setVisible(false);
        } else {
            intentos++;
            if( intentos >= MAX_INTENTOS  ){
                logger.fatal("Se ha superado el número de intentos erróneos máximos.");
                logger.fatal("El sistema se cerró.");
                JOptionPane.showMessageDialog(this, "Se ha superado el número de intentos erróneos máximos." +
                        " El Sistema se cerrará", "Error", JOptionPane.ERROR_MESSAGE);
                System.exit(0);
            }else{
                logger.error("El nombre de usuario o el password son incorrectos.");
                JOptionPane.showMessageDialog(this, "El nombre de usuario o el password son incorrectos",
                        "Error", JOptionPane.WARNING_MESSAGE);
                passwordField.setText("");
            }
        }
    }

    private boolean isLoginValid() {
        String password = String.copyValueOf( passwordField.getPassword() );
        Usuario usuario = usuarioAbm.validarLogin(usuarioTextField.getText(), password );
        if( usuario != null ){
            LoginControlador.getInstance().setUsuario(usuario);
        }
        return usuario != null;
    }
