        nuevoButton.setEnabled(true);
    }
    private final int cliente = 0;
    private final int servidor = 1;

    public void bindinDataEntity(int fuente) {
        if (fuente == servidor) {
            codigoText.setText(getEntity().getCodigo());
            ipText.setText(getEntity().getDireccionIPv4());
            estadoCheckBox.setSelected(getEntity().getActiva());
            descripcionText.setText(getEntity().getDescripcion());
            puertoText.setText(Integer.toString(getEntity().getPuerto()));
            puertoRecepcionText.setText(Integer.toString(getEntity().getPuertoRecepcion()));
            modelTipoConexion.setSelectedEntity(getEntity().getTipoConexion());
        } else if (fuente == cliente) {
            getEntity().setCodigo(codigoText.getText());
            getEntity().setDireccionIPv4(ipText.getText());
            getEntity().setDescripcion(descripcionText.getText());
            getEntity().setActiva(estadoCheckBox.isSelected());
            getEntity().setPuerto(new Integer(puertoText.getText()));
            getEntity().setPuertoRecepcion(new Integer(puertoRecepcionText.getText()));
            getEntity().setTipoConexion(modelTipoConexion.getSelectedEntity());
        }

    }

