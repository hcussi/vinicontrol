    private void cerrar() {
        reset();
        showDatosDialog(false);
    }

    private void nuevo() {
        gestorAbm.nuevo();
        bindinDataEntity(servidor);
        habilitarPanelDatos(true);
        eliminarButton.setEnabled(false);
        showDatosDialog(true);
    }

    private void editar() {
        ConexionIP conexion = null;

        if (buscarTabla.getSelectedRow() != -1) {
            conexion = model.getRow(buscarTabla.getSelectedRow());
            if (conexion != null) {
                gestorAbm.setEntity(conexion);
                bindinDataEntity(servidor);
                habilitarPanelDatos(true);
                showDatosDialog(true);
            }
        }
        if (conexion == null) {
            JOptionPane.showInternalMessageDialog(this, "Debe seleccionar una Conexión para editar");
        }
    }

    private void copiar() {
        ConexionIP conexion = null;

        if (buscarTabla.getSelectedRow() != -1) {
            conexion = model.getRow(buscarTabla.getSelectedRow());
            if (conexion != null) {
                gestorAbm.setEntity(conexion);
                try {
                    gestorAbm.copiar();
                    reset();
                    JOptionPane.showMessageDialog(this, "Se ha copiado exitosamente","Información",JOptionPane.INFORMATION_MESSAGE);
                } catch (Exception ex) {
                    JOptionPane.showMessageDialog(this, ex.getMessage());
                }
            }
        }
        if (conexion == null) {
            JOptionPane.showInternalMessageDialog(this, "Debe seleccionar una Conexión para copiar");
        }
    }

    private void guardar() {

        try {
            new Integer(puertoText.getText());
        } catch (NumberFormatException ex) {
            JOptionPane.showMessageDialog(datosDialog, "El puerto tiene un formato incorrecto.", "Error de validación", JOptionPane.ERROR_MESSAGE);
            return;
        }

        try {
            new Integer(puertoRecepcionText.getText());
        } catch (NumberFormatException ex) {
            JOptionPane.showMessageDialog(datosDialog, "El puerto de recepción tiene un formato incorrecto.", "Error de validación", JOptionPane.ERROR_MESSAGE);
            return;
        }

        if (!Utiles.verificarIp(ipText.getText())) {
            JOptionPane.showMessageDialog(datosDialog, "El formato de la dirección Ip es incorrecto.", "Error de validación", JOptionPane.ERROR_MESSAGE);
            return;
        }

        bindinDataEntity(cliente);
        try {
            gestorAbm.valid();
            gestorAbm.guardar();
            reset();
            showDatosDialog(false);
        } catch (ValidateException ex) {
            JOptionPane.showMessageDialog(datosDialog, ex.getMessage());
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(datosDialog, ex.getMessage());
        }
    }

    private void showDatosDialog(boolean show) {
        if (show) {
            Utiles.centrarFormulario(datosDialog);
        }
        datosDialog.setVisible(show);
    }

    private void eliminar() {
        ConexionIP conexionIP = null;

        try {
            if (buscarTabla.getSelectedRow() != -1) {
                conexionIP = model.getRow(buscarTabla.getSelectedRow());
                if (conexionIP != null) {

                    int respuesta = JOptionPane.showConfirmDialog(datosDialog, "Está seguro que desea eliminar la Conexión seleccionada?",
                            "Confirmar Eliminación",JOptionPane.OK_CANCEL_OPTION);

                    if( respuesta == JOptionPane.OK_OPTION ){
                        gestorAbm.setEntity(conexionIP);
                        gestorAbm.eliminar();
                        reset();
                        showDatosDialog(false);
                    }

                }
            }
            if (conexionIP == null) {
                JOptionPane.showInternalMessageDialog(this, "Debe seleccionar una Conexión para eliminar");
            }
        } catch (Exception ex) {
            JOptionPane.showMessageDialog(this, ex.getMessage());
        }
    }

    private void reset() {
        codigoText.setText("");
        ipText.setText("");
        descripcionText.setText("");
        estadoCheckBox.setSelected(false);
        puertoText.setText("");
        setEntity(null);
        habilitarPanelDatos(false);
        model.setRows(gestorAbm.buscar());
    }

